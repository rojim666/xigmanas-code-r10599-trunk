/oxl/XHd2xpJps+/hLdRrTCRF0tzeeNmefmAXEmwMdEOO9TpWg4=
-----END RSA PRIVATE KEY-----" > ${sshd_hostkey}
	fi

	/bin/chmod 0600 ${sshd_hostkey}
}

run_rc_command "$1"
