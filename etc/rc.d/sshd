#!/bin/sh
#
# Part of XigmaNAS® (https://www.xigmanas.com).
# Copyright © 2018-2025 XigmaNAS® <info@xigmanas.com>.
# All rights reserved.
#
# Secure Shell Daemon
#

# PROVIDE: sshd
# REQUIRE: LOGIN FILESYSTEMS
# XQUERY: --if "count(//sshd/enable) > 0" --output "0" --break
# RCVAR: sshd

. /etc/rc.subr
. /etc/configxml.subr

name="sshd"
desc="Secure Shell Daemon"
rcvar="sshd_enable"

load_rc_config "$name"

#	custom commands
start_precmd="sshd_mkconf"
mkconf_cmd="sshd_mkconf"
extra_commands="reload mkconf"

#	defaults
sshd_enable=${sshd_enable:-"NO"}
sshd_config=${sshd_config:-"/var/etc/ssh/sshd_config"}
sshd_hostkey=${sshd_hostkey:-"/var/etc/ssh/ssh_host_key"}
command="/usr/sbin/${name}"
command_args="-f ${sshd_config} -h ${sshd_hostkey}"
pidfile="/var/run/${name}.pid"

sshd_mkconf()
{
	local _privatekey _platform _confkey

#	create sshd_config file
	/usr/local/bin/xml sel --template \
		--match '(//sshd[enable])[1]' \
			--output 'HostKeyAlgorithms +ssh-rsa' --nl \
			--output 'SyslogFacility LOCAL3' --nl \
			--output 'UseDNS no' --nl \
			--if 'string-length(subsystem) > 0' \
				--value-of 'concat("Subsystem ",subsystem)' --nl \
			--else \
				--output 'Subsystem sftp /usr/local/libexec/sftp-server' --nl \
			--break \
			--if 'count(kbdinteractiveauthentication) > 0' \
				--output 'KbdInteractiveAuthentication yes' --nl \
			--else \
				--output 'KbdInteractiveAuthentication no' --nl \
			--break \
			--if 'string-length(port) > 0' \
				--value-of 'concat("Port ",port)' --nl \
			--break \
			--if 'count(permitrootlogin) > 0' \
				--output 'PermitRootLogin yes' --nl \
			--else \
				--output 'PermitRootLogin no' --nl \
			--break \
			--if 'count(tcpforwarding) > 0' \
				--output 'AllowTcpForwarding yes' --nl \
			--else \
				--output 'AllowTcpForwarding no' --nl \
			--break \
			--if 'count(compression) > 0' \
				--output 'Compression yes' --nl \
			--else \
				--output 'Compression no' --nl \
			--break \
			--if 'count(passwordauthentication) > 0' \
				--output 'PasswordAuthentication yes' --nl \
			--else \
				--output 'PasswordAuthentication no' --nl \
			--break \
			--if 'count(pubkeyauthentication) > 0' \
				--output 'PubkeyAuthentication yes' --nl \
			--else \
				--output 'PubkeyAuthentication no' --nl \
			--break \
			--if 'string-length(loglevel) > 0' \
				--value-of 'concat("LogLevel ",loglevel)' --nl \
			--break \
			--match 'auxparam' \
				--if 'position() < last() or string-length(.) > 0' \
					--value-of '.' --nl \
				--break \
			--break \
		--break \
		${configxml_file} | /usr/local/bin/xml unesc > ${sshd_config}
#	create private key
	_platform=$( cat /etc/platform | sed -e 's/.*-//' )
	_confkey="/conf/ssh_host_rsa_key"
	if [ -d /conf -a ! -f ${_confkey} ]; then
		if [ "${_platform}" = "embedded" ]; then
			/sbin/mount -uw /cf
		fi
		/usr/bin/ssh-keygen -q -t rsa -f ${_confkey} -N ""
		/usr/bin/ssh-keygen -l -f ${_confkey}.pub
		if [ "${_platform}" = "embedded" ]; then
			/sbin/umount /cf; /sbin/mount /cf
		fi
	fi
#	create ssh_host_rsa_key file
	_privatekey=$( configxml_get "(//sshd[enable])[1]/private-key" )
	/bin/rm -f ${sshd_hostkey}
	if [ -n "${_privatekey}" ]; then
		echo "${_privatekey}" > ${sshd_hostkey}.tmp
		/usr/bin/uudecode -m -p -r ${sshd_hostkey}.tmp | /usr/bin/tr -d '\r' > ${sshd_hostkey}
		/bin/rm -f ${sshd_hostkey}.tmp
	elif [ -d /conf -a -f ${_confkey} ]; then
		cp ${_confkey} ${sshd_hostkey}
	else
		echo "-----BEGIN RSA PRIVATE KEY-----
MIIEogIBAAKCAQEAvzenPFTj9cOw+30GhPpNk8OJ8prhW27iT3zbOXP+vSIxkLnS
6lXnr9t5ZdrD15zXWs3HP0jRymQOJMAzOgmVTc1BSkwH82hdaIsN5sAJ1oZQcvwN
2D4wcAKsNzZDf1QHmie8g4+GYDYri+Mdmz5ZwIHSgKb6put+l3b4JoJUl3JyCm0m
